                                                                <Condition Property="helpers:ElementHelper.IsAnimation" Value="True" />
                                                            </MultiTrigger.Conditions>
                                                            <Setter TargetName="ExpandededArrow" Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <RotateTransform Angle="0" />
                                                                </Setter.Value>
                                                            </Setter>
                                                        </MultiTrigger>

                                                        <MultiTrigger>
                                                            <MultiTrigger.Conditions>
                                                                <Condition Property="IsChecked" Value="True" />
                                                                <Condition Property="helpers:ElementHelper.IsAnimation" Value="False" />
                                                            </MultiTrigger.Conditions>
                                                            <Setter TargetName="ExpandededArrow" Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <RotateTransform Angle="-90" />
                                                                </Setter.Value>
                                                            </Setter>
                                                        </MultiTrigger>
                                                        <MultiTrigger>
                                                            <MultiTrigger.Conditions>
                                                                <Condition Property="IsChecked" Value="False" />
                                                                <Condition Property="helpers:ElementHelper.IsAnimation" Value="False" />
                                                            </MultiTrigger.Conditions>
                                                            <Setter TargetName="ExpandededArrow" Property="RenderTransform">
                                                                <Setter.Value>
                                                                    <RotateTransform Angle="0" />
                                                                </Setter.Value>
                                                            </Setter>
                                                        </MultiTrigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Setter.Value>
                            </Setter>
