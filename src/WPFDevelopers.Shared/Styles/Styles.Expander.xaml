                                                            </Setter>
                                                        </MultiTrigger>
                                                        <MultiTrigger>
                                                            <MultiTrigger.Conditions>
                                                                <Condition Property="IsChecked" Value="False" />
                                                                <Condition Property="helpers:ElementHelper.IsAnimation" Value="False" />
                                                            </MultiTrigger.Conditions>
