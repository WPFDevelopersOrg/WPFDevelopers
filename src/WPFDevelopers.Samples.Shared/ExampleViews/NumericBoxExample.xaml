<UserControl
    x:Class="WPFDevelopers.Samples.ExampleViews.NumericBoxExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:WPFDevelopers.Samples.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFDevelopers.Samples.ExampleViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wd="https://github.com/WPFDevelopersOrg/WPFDevelopers"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <controls:CodeViewer Header="{Binding NavigateMenuItem.Name}">
        <UniformGrid
            Margin="10"
            wd:PanelHelper.Spacing="6"
            Rows="2">
            <GroupBox Header="自定义右键菜单">
                <wd:NumericBox
                    Width="100"
                    Height="30"
                    IsAutoCapture="True"
                    Maximum="100"
                    Minimum="0"
                    Precision="2">
                    <wd:NumericBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Copy">
                                <MenuItem.Icon>
                                    <wd:PathIcon Kind="Copy" />
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </wd:NumericBox.ContextMenu>
                </wd:NumericBox>
            </GroupBox>
            <GroupBox Header="不显示按钮组">
                <wd:NumericBox
                    Width="100"
                    Height="40"
                    Maximum="1000"
                    Minimum="100"
                    UpDownButtonsWidth="0" />
            </GroupBox>
            <GroupBox Header="自定义步长">
                <wd:NumericBox
                    Width="100"
                    VerticalAlignment="Center"
                    Interval="0.01"
                    Precision="2" />
            </GroupBox>
            <GroupBox Header="自定义增加和减少事件">
                <wd:NumericBox
                    x:Name="MyNumericBox"
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    DecreaseClick="NumericBox_DecreaseClick"
                    IncreaseClick="NumericBox_IncreaseClick"
                    Maximum="1"
                    Minimum="0"
                    Precision="3"
                    Value="1" />
            </GroupBox>
        </UniformGrid>
        <controls:CodeViewer.SourceCodes>
            <controls:SourceCodeModel CodeSource="/WPFDevelopers.SamplesCode;component/ExampleViews/NumericBoxExample.xaml" CodeType="Xaml" />
            <controls:SourceCodeModel CodeSource="/WPFDevelopers.SamplesCode;component/ExampleViews/NumericBoxExample.xaml.cs" CodeType="CSharp" />
        </controls:CodeViewer.SourceCodes>
    </controls:CodeViewer>
</UserControl>
