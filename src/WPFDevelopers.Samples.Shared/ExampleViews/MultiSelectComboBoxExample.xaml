<UserControl
    x:Class="WPFDevelopers.Samples.ExampleViews.MultiSelectComboBoxExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:WPFDevelopers.Samples.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFDevelopers.Samples.ExampleViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:WPFDevelopers.Sample.Models"
    xmlns:vm="clr-namespace:WPFDevelopers.Samples.ViewModels"
    xmlns:wd="https://github.com/WPFDevelopersOrg/WPFDevelopers"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <model:HospitalList x:Key="myHospitalList" />
    </UserControl.Resources>
    <controls:CodeViewer Header="{Binding NavigateMenuItem.Name}">
        <UniformGrid Columns="2" Rows="3">
            <wd:MultiSelectComboBox
                Width="200"
                HorizontalAlignment="Center"
                wd:ElementHelper.Watermark="请选择内容"
                Delimiter="^"
                IsSearch="False"
                IsSelectAllActive="True">
                <wd:MultiSelectComboBoxItem>Option 1</wd:MultiSelectComboBoxItem>
                <wd:MultiSelectComboBoxItem>Option 2</wd:MultiSelectComboBoxItem>
                <wd:MultiSelectComboBoxItem>Option 3</wd:MultiSelectComboBoxItem>
                <wd:MultiSelectComboBoxItem>Option 4</wd:MultiSelectComboBoxItem>
                <wd:MultiSelectComboBoxItem>Option 5</wd:MultiSelectComboBoxItem>
            </wd:MultiSelectComboBox>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <wd:MultiSelectComboBox
                    Name="MyMultiSelectComboBox"
                    Height="38"
                    VerticalContentAlignment="Center"
                    wd:ElementHelper.CornerRadius="3"
                    wd:ElementHelper.Watermark="MultiSelectComboBox"
                    DisplayMemberPath="Number"
                    IsSelectAllActive="True"
                    ItemsSource="{Binding Drawings}"
                    SearchWatermark="请输入搜索内容"
                    SelectedValuePath="Index">
                    <wd:MultiSelectComboBox.DataContext>
                        <vm:DrawingExampleVM />
                    </wd:MultiSelectComboBox.DataContext>
                </wd:MultiSelectComboBox>
                <Button
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    wd:ElementHelper.CornerRadius="3"
                    Click="Button_Click"
                    Content="获取选中"
                    Style="{StaticResource WD.SuccessPrimaryButton}" />
            </Grid>

            <wd:MultiSelectComboBox
                Width="200"
                wd:ElementHelper.Watermark="tags"
                IsSearch="True"
                IsSelectAllActive="True"
                ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=local:MultiSelectComboBoxExample}}"
                SearchWatermark="请输入搜索内容"
                SelectedValuePath="Name"
                ShowType="Tag">
                <wd:MultiSelectComboBox.View>
                    <GridView>
                        <GridViewColumn Width="30">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding ID}" Header="ID" />
                        <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" />
                    </GridView>
                </wd:MultiSelectComboBox.View>
            </wd:MultiSelectComboBox>

            <Grid wd:PanelHelper.Spacing="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center" Text="Binding:" />
                <wd:MultiSelectComboBox
                    Grid.Column="1"
                    Width="200"
                    HorizontalAlignment="Left"
                    wd:ElementHelper.Watermark="下拉多选搜索"
                    DisplayMemberPath="Name"
                    IsSelectAllActive="True"
                    ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=local:MultiSelectComboBoxExample}}"
                    SearchWatermark="请输入搜索内容"
                    SelectedItemsExt="{Binding SelectedItems, RelativeSource={RelativeSource AncestorType=local:MultiSelectComboBoxExample}}"
                    SelectedValuePath="ID"
                    ShowType="Tag" />
            </Grid>
            <Grid HorizontalAlignment="Center" wd:PanelHelper.Spacing="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center" Text="Single:" />
                <wd:MultiSelectComboBox
                    Grid.Column="1"
                    Width="200"
                    HorizontalAlignment="Left"
                    wd:ElementHelper.Watermark="Single select"
                    DisplayMemberPath="Name"
                    IsSelectAllActive="True"
                    ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=local:MultiSelectComboBoxExample}}"
                    SearchWatermark="请输入搜索内容"
                    SelectionMode="Single"
                    ShowType="Tag">
                    <wd:MultiSelectComboBox.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding ID}" Header="ID" />
                            <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" />
                        </GridView>
                    </wd:MultiSelectComboBox.View>
                </wd:MultiSelectComboBox>
            </Grid>
            <Grid HorizontalAlignment="Center" wd:PanelHelper.Spacing="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center" Text="证券代码:" />
                <wd:MultiSelectComboBox
                    Grid.Column="1"
                    Width="200"
                    HorizontalAlignment="Left"
                    wd:ElementHelper.CornerRadius="3"
                    wd:ElementHelper.Watermark="请选择股票代码"
                    DisplayMemberPath="StkFull"
                    IsSelectAllActive="True"
                    ItemsSource="{Binding StkInfoList, RelativeSource={RelativeSource AncestorType=local:MultiSelectComboBoxExample}}"
                    SearchWatermark="请选择股票代码"
                    ShowType="Tag">
                    <wd:MultiSelectComboBox.View>
                        <GridView>
                            <GridViewColumn Width="30">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            wd:ElementHelper.CornerRadius="3"
                                            IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn DisplayMemberBinding="{Binding StkTypeName}" Header="类型" />
                            <GridViewColumn DisplayMemberBinding="{Binding StkId}" Header="代码" />
                            <GridViewColumn DisplayMemberBinding="{Binding StkName}" Header="名称" />
                        </GridView>
                    </wd:MultiSelectComboBox.View>
                </wd:MultiSelectComboBox>
            </Grid>
        </UniformGrid>
        <controls:CodeViewer.SourceCodes>
            <controls:SourceCodeModel CodeSource="/WPFDevelopers.SamplesCode;component/ExampleViews/MultiSelectComboBoxExample.xaml" CodeType="Xaml" />
            <controls:SourceCodeModel CodeSource="/WPFDevelopers.SamplesCode;component/ExampleViews/MultiSelectComboBoxExample.xaml.cs" CodeType="CSharp" />
        </controls:CodeViewer.SourceCodes>
    </controls:CodeViewer>
</UserControl>
